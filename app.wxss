/* app.wxss */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* 通用样式 */
.container {
  padding: 20rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title-text {
  font-size: 32rpx;
  font-weight: bold;
}

/* 按钮样式 */
.btn {
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  border: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background-color: #007aff;
  color: white;
}

.btn-secondary {
  background-color: #5856d6;
  color: white;
}

.btn-success {
  background-color: #34c759;
  color: white;
}

.btn-danger {
  background-color: #ff3b30;
  color: white;
}

.btn-warning {
  background-color: #ff9500;
  color: white;
}

.btn-info {
  background-color: #5ac8fa;
  color: white;
}

.btn-disabled {
  background-color: #c7c7cc;
  color: white;
  opacity: 0.5;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  margin-right: 16rpx;
}

.tag-primary {
  background-color: #007aff;
  color: white;
}

.tag-secondary {
  background-color: #5856d6;
  color: white;
}

.tag-success {
  background-color: #34c759;
  color: white;
}

.tag-danger {
  background-color: #ff3b30;
  color: white;
}

/* 文本样式 */
.text-xs {
  font-size: 20rpx;
}

.text-sm {
  font-size: 24rpx;
}

.text-md {
  font-size: 28rpx;
}

.text-lg {
  font-size: 32rpx;
}

.text-xl {
  font-size: 36rpx;
}

.text-2xl {
  font-size: 48rpx;
}

.text-gray {
  color: #8e8e93;
}

.text-gray-500 {
  color: #c7c7cc;
}

.text-primary {
  color: #007aff;
}

.text-secondary {
  color: #5856d6;
}

.text-success {
  color: #34c759;
}

.text-danger {
  color: #ff3b30;
}

.text-warning {
  color: #ff9500;
}

.font-bold {
  font-weight: bold;
}

.font-medium {
  font-weight: 500;
}

.line-through {
  text-decoration: line-through;
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-between {
  justify-content: space-between;
}

.flex-center {
  justify-content: center;
}

.flex-end {
  justify-content: flex-end;
}

.items-center {
  align-items: center;
}

.space-y-2 > view + view {
  margin-top: 16rpx;
}

.space-y-3 > view + view {
  margin-top: 24rpx;
}

.space-y-4 > view + view {
  margin-top: 32rpx;
}

.space-x-2 > view + view {
  margin-left: 16rpx;
}

/* Grid布局 */
.grid {
  display: grid;
}

.grid-cols-2 {
  grid-template-columns: repeat(2, 1fr);
}

.grid-cols-7 {
  grid-template-columns: repeat(7, 1fr);
}

.gap-1 {
  gap: 8rpx;
}

.gap-3 {
  gap: 24rpx;
}

/* 间距 */
.mb-1 {
  margin-bottom: 8rpx;
}

.mb-2 {
  margin-bottom: 16rpx;
}

.mb-3 {
  margin-bottom: 24rpx;
}

.mb-4 {
  margin-bottom: 32rpx;
}

.mt-2 {
  margin-top: 16rpx;
}

.mr-1 {
  margin-right: 8rpx;
}

.mr-2 {
  margin-right: 16rpx;
}

.ml-6 {
  margin-left: 48rpx;
}

.p-2 {
  padding: 16rpx;
}

.p-3 {
  padding: 24rpx;
}

.p-4 {
  padding: 32rpx;
}

/* 背景色 */
.bg-white {
  background-color: white;
}

.bg-gray-100 {
  background-color: #f2f2f7;
}

.bg-primary {
  background-color: #007aff;
}

.bg-secondary {
  background-color: #5856d6;
}

.bg-success {
  background-color: #34c759;
}

.bg-danger {
  background-color: #ff3b30;
}

.bg-opacity-20 {
  opacity: 0.2;
}

/* 圆角 */
.rounded {
  border-radius: 8rpx;
}

.rounded-full {
  border-radius: 9999rpx;
}

.rounded-lg {
  border-radius: 16rpx;
}

/* 文本对齐 */
.text-center {
  text-align: center;
}

/* 图标 */
.icon {
  font-size: 32rpx;
}

.icon-sm {
  font-size: 24rpx;
}

