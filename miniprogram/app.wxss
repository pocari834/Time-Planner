/* app.wxss - 紫色粉色可爱像素风格 */
page {
  background: linear-gradient(135deg, #f8e8ff 0%, #ffe8f5 100%);
  background-color: #f8e8ff;
  font-family: 'Courier New', Courier, monospace, 'Microsoft YaHei', sans-serif;
  image-rendering: pixelated;
  image-rendering: -moz-crisp-edges;
  image-rendering: crisp-edges;
}

/* 通用样式 */
.container {
  padding: 16rpx;
  box-sizing: border-box;
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #8b5a9f;
  text-shadow: 2rpx 2rpx 0 #fff, -1rpx -1rpx 0 #d4a5e8;
}

/* 像素边框样式 - 可爱风格 */
.pixel-borders-inset {
  border: 4rpx solid;
  border-color: #e8b5e8 #fff #fff #e8b5e8;
  box-shadow: inset 2rpx 2rpx 0 #d4a5e8, inset -2rpx -2rpx 0 #f5d5f5;
}

.pixel-borders-outset {
  border: 4rpx solid;
  border-color: #fff #e8b5e8 #e8b5e8 #fff;
  box-shadow: 2rpx 2rpx 0 #d4a5e8, -1rpx -1rpx 0 #f5d5f5;
}

/* 按钮样式 - 紫色粉色可爱风格 */
.btn {
  padding: 8rpx 16rpx;
  border-radius: 0;
  font-size: 22rpx;
  border: 3rpx solid;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-family: 'Courier New', Courier, monospace;
  font-weight: bold;
  text-transform: uppercase;
  cursor: pointer;
  transition: all 0.1s;
  position: relative;
  min-height: 60rpx;
  line-height: 1.2;
}

/* 小按钮样式 */
.btn-sm {
  padding: 4rpx 8rpx;
  font-size: 18rpx;
  border: 2rpx solid;
  min-height: 40rpx;
}

/* 超小按钮样式（用于日历） */
.btn-xs {
  padding: 2rpx 6rpx;
  font-size: 24rpx;
  border: 2rpx solid;
  min-height: 36rpx;
  min-width: 36rpx;
  background: transparent;
  color: #8b5a9f;
  border-color: #e8b5e8 #fff #fff #e8b5e8;
  box-shadow: 1rpx 1rpx 0 #d4a5e8;
}

.btn-xs:active {
  transform: translate(1rpx, 1rpx);
  box-shadow: inset 1rpx 1rpx 0 #d4a5e8;
}

.btn:active {
  transform: translate(2rpx, 2rpx);
  box-shadow: inset 2rpx 2rpx 0 rgba(139, 90, 159, 0.3);
}

.btn-primary {
  background: linear-gradient(135deg, #a855c7 0%, #9333ea 100%);
  background-color: #a855c7;
  color: white;
  border-color: #7c3aed #c084fc #c084fc #7c3aed;
  box-shadow: 2rpx 2rpx 0 #6d28d9, inset 1rpx 1rpx 0 rgba(255, 255, 255, 0.4);
}

.btn-secondary {
  background: linear-gradient(135deg, #ec4899 0%, #f472b6 100%);
  background-color: #ec4899;
  color: white;
  border-color: #db2777 #f9a8d4 #f9a8d4 #db2777;
  box-shadow: 2rpx 2rpx 0 #be185d, inset 1rpx 1rpx 0 rgba(255, 255, 255, 0.4);
}

.btn-success {
  background: linear-gradient(135deg, #a78bfa 0%, #c084fc 100%);
  background-color: #a78bfa;
  color: white;
  border-color: #8b5cf6 #d8b4fe #d8b4fe #8b5cf6;
  box-shadow: 2rpx 2rpx 0 #7c3aed, inset 1rpx 1rpx 0 rgba(255, 255, 255, 0.4);
}

.btn-success[disabled] {
  background-color: #e9d5ff;
  color: #c084fc;
  border-color: #d8b4fe #f3e8ff #f3e8ff #d8b4fe;
  box-shadow: 1rpx 1rpx 0 #c084fc;
  opacity: 0.6;
}

.btn-danger {
  background: linear-gradient(135deg, #f472b6 0%, #fb7185 100%);
  background-color: #f472b6;
  color: white;
  border-color: #ec4899 #fda4af #fda4af #ec4899;
  box-shadow: 2rpx 2rpx 0 #db2777, inset 1rpx 1rpx 0 rgba(255, 255, 255, 0.4);
}

.btn-danger[disabled] {
  background-color: #fce7f3;
  color: #f472b6;
  border-color: #fbcfe8 #fdf2f8 #fdf2f8 #fbcfe8;
  box-shadow: 1rpx 1rpx 0 #f472b6;
  opacity: 0.6;
}

.btn-warning {
  background: linear-gradient(135deg, #f0abfc 0%, #f9a8d4 100%);
  background-color: #f0abfc;
  color: white;
  border-color: #e879f9 #fbcfe8 #fbcfe8 #e879f9;
  box-shadow: 2rpx 2rpx 0 #d946ef, inset 1rpx 1rpx 0 rgba(255, 255, 255, 0.4);
}

.btn-info {
  background: linear-gradient(135deg, #c084fc 0%, #e879f9 100%);
  background-color: #c084fc;
  color: white;
  border-color: #a855c7 #f0abfc #f0abfc #a855c7;
  box-shadow: 2rpx 2rpx 0 #9333ea, inset 1rpx 1rpx 0 rgba(255, 255, 255, 0.4);
}

.btn-disabled,
button[disabled] {
  background-color: #e9d5ff !important;
  color: #c084fc !important;
  border-color: #d8b4fe #f3e8ff #f3e8ff #d8b4fe !important;
  box-shadow: 1rpx 1rpx 0 #c084fc !important;
  opacity: 0.6 !important;
  pointer-events: none;
}

/* 卡片样式 - 紫色粉色可爱风格 */
.card {
  background: linear-gradient(135deg, #faf5ff 0%, #fdf2f8 100%);
  background-color: #faf5ff;
  border-radius: 0;
  padding: 20rpx;
  border: 3rpx solid;
  border-color: #fff #e8b5e8 #e8b5e8 #fff;
  box-shadow: 3rpx 3rpx 0 #d4a5e8, inset 2rpx 2rpx 0 #f5d5f5;
}

/* 标签样式 - 紫色粉色可爱风格 */
.tag {
  display: inline-block;
  padding: 4rpx 8rpx;
  border-radius: 0;
  font-size: 18rpx;
  margin-right: 8rpx;
  border: 2rpx solid;
  font-weight: bold;
  font-family: 'Courier New', Courier, monospace;
}

.tag-primary {
  background: linear-gradient(135deg, #a855c7 0%, #9333ea 100%);
  background-color: #a855c7;
  color: white;
  border-color: #7c3aed #c084fc #c084fc #7c3aed;
  box-shadow: 1rpx 1rpx 0 #6d28d9;
}

.tag-secondary {
  background: linear-gradient(135deg, #ec4899 0%, #f472b6 100%);
  background-color: #ec4899;
  color: white;
  border-color: #db2777 #f9a8d4 #f9a8d4 #db2777;
  box-shadow: 1rpx 1rpx 0 #be185d;
}

.tag-success {
  background: linear-gradient(135deg, #a78bfa 0%, #c084fc 100%);
  background-color: #a78bfa;
  color: white;
  border-color: #8b5cf6 #d8b4fe #d8b4fe #8b5cf6;
  box-shadow: 1rpx 1rpx 0 #7c3aed;
}

.tag-danger {
  background: linear-gradient(135deg, #f472b6 0%, #fb7185 100%);
  background-color: #f472b6;
  color: white;
  border-color: #ec4899 #fda4af #fda4af #ec4899;
  box-shadow: 1rpx 1rpx 0 #db2777;
}

