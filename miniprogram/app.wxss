/* Flex布局 */
.flex {
  display: flex;
}

.flex-between {
  justify-content: space-between;
}

.flex-center {
  justify-content: center;
}

.flex-end {
  justify-content: flex-end;
}

.items-center {
  align-items: center;
}

.space-y-2 > view + view {
  margin-top: 12rpx;
}

.space-y-1 > view + view {
  margin-top: 8rpx;
}

.space-y-3 > view + view {
  margin-top: 16rpx;
}

.space-y-4 > view + view {
  margin-top: 20rpx;
}

.space-x-2 > view + view {
  margin-left: 16rpx;
}

/* Grid布局 */
.grid {
  display: grid;
}

.grid-cols-2 {
  grid-template-columns: repeat(2, 1fr);
}

.grid-cols-7 {
  grid-template-columns: repeat(7, 1fr);
}

.gap-1 {
  gap: 8rpx;
}

.gap-3 {
  gap: 16rpx;
}

